<% include ../partials/header %>

<div class="container">
    <div class="row">
    <h1 style="text-align: center">Add new comment to <%= dreamcamp.name %></h1>
    
    <div style="width:30%; margin: 40px auto">
        <form method="POST" action="/dreams/<%= dreamcamp._id %>/comments">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Comment" name="comments[text]">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Author" name="comments[author]">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/dreams">View All Dreams</a>
    </div>

    </div>
</div>

<% include ../partials/footer %>