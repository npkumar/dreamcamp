<% include ../partials/header %>

<h1><%= dreamCamp.name %></h1>
<img src="<%= dreamCamp.image %>">
<p><%= dreamCamp.description %></p>

<p><a class="btn btn-success" href="/dreams/<%= dreamCamp._id %>/comments/new">Add New Comment</a></p>

<% dreamCamp.comments.forEach(function(comment){ %>
    <p><strong><%= comment.author %></strong> - <%= comment.text %></p>
<% }) %>
<% include ../partials/footer %> 