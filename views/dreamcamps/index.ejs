<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Check out new dreams!</h1>
            <p>Find out what others are dreaming!</p>
            <p>
                <a class="btn btn-primary btn-large" href="/dreams/new">Add a new dream</a>
            </p>
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Dreams</h3>
        </div>
    </div>
    
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% dreams.forEach(function(dream){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= dream.image%>">
                    <div class="caption">
                        <h4><%= dream.name %><h4>
                    </div>
                    <p>
                        <a href="/dreams/<%= dream._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>

</div>
<% include ../partials/footer %>